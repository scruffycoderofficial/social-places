{% macro renderAddress(address, formatWithHtml = false) %}
    {% if address %}
        {% if address.label %}
            <b>{{ address.label|escape }}</b>
            <br />
        {% endif %}
        {%- if formatWithHtml -%}
            {{- address|oro_format_address_html -}}
        {%- else -%}
            {{- address|oro_format_address|nl2br -}}
        {% endif %}
    {% else %}
        {{ 'oro.ui.empty'|trans }}
    {% endif %}
{% endmacro %}
