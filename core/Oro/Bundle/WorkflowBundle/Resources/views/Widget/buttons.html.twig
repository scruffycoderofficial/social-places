{% set entity_class = entity is defined ? oro_class_name(entity) : null %}
{% if entity_class is not empty and has_workflows(entity_class) %}
    {{
        oro_widget_render({
            'widgetType': 'buttons',
            'url': path('oro_workflow_widget_buttons', {
                entityClass: entity_class,
                entityId: entity is defined ? entity.id : 0
            }),
            'alias': 'workflow_buttons'
        })
    }}
{% endif %}
